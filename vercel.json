{
  "version": 2,
  "rewrites": [
    {
      "source": "/token",
      "destination": "backend/main.py"
    },
    {
      "source": "/register",
      "destination": "backend/main.py"
    },
    {
      "source": "/scan",
      "destination": "backend/main.py"
    },
    {
      "source": "/history",
      "destination": "backend/main.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/((?!token|register|scan|history|api).*)",
      "destination": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ]
}